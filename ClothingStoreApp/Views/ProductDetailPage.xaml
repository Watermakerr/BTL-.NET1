<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClothingStoreApp.Views.ProductDetailPage"
             BackgroundColor="#F8F9FA"
             x:Name="ThisPage">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Product Image Card -->
            <Frame BackgroundColor="White" 
                   CornerRadius="20" 
                   Padding="10" 
                   HasShadow="True"
                   HeightRequest="320">
                <Grid>
                    <Frame CornerRadius="15" 
                           Padding="0" 
                           BackgroundColor="#F8F9FA"
                           HasShadow="False">
                        <Image Source="{Binding Product.ImageURL}" 
                               Aspect="AspectFit" 
                               HeightRequest="280" />
                    </Frame>
                    <!-- Wishlist Heart in top-right corner -->
                    <Button Text="{Binding HeartIcon}" 
                            FontSize="28" 
                            BackgroundColor="White" 
                            TextColor="Red" 
                            CornerRadius="25" 
                            WidthRequest="50" 
                            HeightRequest="50" 
                            HorizontalOptions="End"
                            VerticalOptions="Start"
                            Margin="10"
                            Command="{Binding ToggleWishlistCommand}"
                            CommandParameter="{Binding Source={x:Reference ThisPage}}" />
                </Grid>
            </Frame>

            <!-- Product Info Card -->
            <Frame BackgroundColor="White" 
                   CornerRadius="20" 
                   Padding="25" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">

                    <!-- Product Name -->
                    <Label Text="{Binding Product.ProductName}" 
                           FontSize="26" 
                           FontAttributes="Bold" 
                           TextColor="#2C3E50"
                           HorizontalTextAlignment="Start"
                           LineBreakMode="WordWrap" />

                    <!-- Product Price -->
                    <Frame BackgroundColor="#E74C3C" 
                           CornerRadius="15" 
                           Padding="15,10" 
                           HasShadow="False"
                           HorizontalOptions="Start">
                        <Label Text="{Binding Product.Price, StringFormat='{0:C0}'}" 
                               FontSize="22" 
                               FontAttributes="Bold"
                               TextColor="White" />
                    </Frame>

                    <!-- Quantity Selector -->
                    <Frame BackgroundColor="#F8F9FA" 
                           CornerRadius="15" 
                           Padding="20" 
                           HasShadow="False">
                        <VerticalStackLayout Spacing="12">
                            <Label Text="ðŸ”¢ Chá»n sá»‘ lÆ°á»£ng" 
                                   FontSize="16" 
                                   FontAttributes="Bold"
                                   TextColor="#2C3E50" />

                            <Grid ColumnDefinitions="Auto,*,Auto" 
                                  ColumnSpacing="15" 
                                  HorizontalOptions="Center">

                                <!-- Decrease Button -->
                                <Frame Grid.Column="0" 
                                       BackgroundColor="#4A90E2" 
                                       CornerRadius="25" 
                                       Padding="0" 
                                       HasShadow="False"
                                       WidthRequest="50" 
                                       HeightRequest="50">
                                    <Button Text="âˆ’" 
                                            FontSize="24" 
                                            FontAttributes="Bold"
                                            BackgroundColor="Transparent" 
                                            TextColor="White" 
                                            Command="{Binding DecreaseQuantityCommand}" />
                                </Frame>

                                <!-- Quantity Display -->
                                <Frame Grid.Column="1" 
                                       BackgroundColor="White" 
                                       CornerRadius="15" 
                                       Padding="0" 
                                       HasShadow="False"
                                       WidthRequest="80"
                                       BorderColor="#E9ECEF">
                                    <Entry Text="{Binding Quantity, Mode=TwoWay}" 
                                           Keyboard="Numeric" 
                                           HorizontalTextAlignment="Center" 
                                           VerticalTextAlignment="Center"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#2C3E50"
                                           BackgroundColor="Transparent" />
                                </Frame>

                                <!-- Increase Button -->
                                <Frame Grid.Column="2" 
                                       BackgroundColor="#4A90E2" 
                                       CornerRadius="25" 
                                       Padding="0" 
                                       HasShadow="False"
                                       WidthRequest="50" 
                                       HeightRequest="50">
                                    <Button Text="+" 
                                            FontSize="24" 
                                            FontAttributes="Bold"
                                            BackgroundColor="Transparent" 
                                            TextColor="White" 
                                            Command="{Binding IncreaseQuantityCommand}" />
                                </Frame>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Add to Cart Button -->
                    <Frame BackgroundColor="#28A745" 
                           CornerRadius="15" 
                           Padding="0" 
                           HasShadow="False">
                        <Button Text="ðŸ›’  ThÃªm vÃ o giá» hÃ ng" 
                                BackgroundColor="Transparent" 
                                TextColor="White" 
                                FontSize="18"
                                FontAttributes="Bold"
                                HeightRequest="55"
                                Command="{Binding AddToCartCommand}"
                                CommandParameter="{Binding Source={x:Reference ThisPage}}" />
                    </Frame>

                </VerticalStackLayout>
            </Frame>

            <!-- Product Details Card -->
            <Frame BackgroundColor="White" 
                   CornerRadius="20" 
                   Padding="25" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="ðŸ“‹" FontSize="20" VerticalOptions="Center" />
                        <Label Text="Chi tiáº¿t sáº£n pháº©m" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               VerticalOptions="Center" />
                    </StackLayout>

                    <BoxView BackgroundColor="#E9ECEF" 
                             HeightRequest="1" 
                             HorizontalOptions="Fill" />

                    <Label Text="{Binding Product.Description}" 
                           FontSize="16" 
                           LineBreakMode="WordWrap"
                           TextColor="#34495E"
                           LineHeight="1.5" />
                </VerticalStackLayout>
            </Frame>

            <!-- Reviews Section -->
            <Frame BackgroundColor="White" 
                   CornerRadius="20" 
                   Padding="25" 
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <StackLayout Orientation="Horizontal" Spacing="10">
                        <Label Text="â­" FontSize="20" VerticalOptions="Center" />
                        <Label Text="ÄÃ¡nh giÃ¡ sáº£n pháº©m" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               VerticalOptions="Center" />
                    </StackLayout>

                    <BoxView BackgroundColor="#E9ECEF" 
                             HeightRequest="1" 
                             HorizontalOptions="Fill" />

                    <CollectionView ItemsSource="{Binding Reviews}" 
                                    HeightRequest="250">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout Spacing="10" 
                                                 HorizontalOptions="Center" 
                                                 VerticalOptions="Center">
                                <Label Text="ðŸ’¬" FontSize="40" HorizontalOptions="Center" />
                                <Label Text="ChÆ°a cÃ³ Ä‘Ã¡nh giÃ¡ nÃ o" 
                                       FontSize="16" 
                                       TextColor="#7F8C8D"
                                       HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame CornerRadius="15" 
                                       Padding="20" 
                                       BackgroundColor="#F8F9FA" 
                                       Margin="0,8"
                                       HasShadow="False"
                                       BorderColor="#E9ECEF">
                                    <VerticalStackLayout Spacing="10">

                                        <!-- Rating Stars -->
                                        <StackLayout Orientation="Horizontal" Spacing="5">
                                            <Label Text="â­" FontSize="16" VerticalOptions="Center" />
                                            <Label Text="{Binding Rating, StringFormat='{0} sao'}" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold"
                                                   TextColor="#F39C12"
                                                   VerticalOptions="Center" />
                                        </StackLayout>

                                        <!-- Comment -->
                                        <Frame BackgroundColor="White" 
                                               CornerRadius="10" 
                                               Padding="15" 
                                               HasShadow="False">
                                            <Label Text="{Binding Comment}" 
                                                   FontSize="15" 
                                                   LineBreakMode="WordWrap"
                                                   TextColor="#2C3E50"
                                                   LineHeight="1.4" />
                                        </Frame>

                                        <!-- Review Date -->
                                        <StackLayout Orientation="Horizontal" Spacing="5">
                                            <Label Text="ðŸ“…" FontSize="14" VerticalOptions="Center" />
                                            <Label Text="{Binding ReviewDate, StringFormat='{0:dd/MM/yyyy HH:mm}'}" 
                                                   FontSize="13" 
                                                   TextColor="#95A5A6"
                                                   VerticalOptions="Center" />
                                        </StackLayout>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Bottom Spacing -->
            <BoxView HeightRequest="20" BackgroundColor="Transparent" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>