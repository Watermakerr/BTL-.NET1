<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ClothingStoreApp.ViewModels"
             x:Class="ClothingStoreApp.Views.RegisterPage"
             BackgroundColor="#F5F7FA">

    
        <VerticalStackLayout VerticalOptions="Center">
            <!-- Form Container -->
            <Frame BackgroundColor="White" 
                   CornerRadius="20" 
                   Padding="30,40" 
                   HasShadow="True"
                   Margin="0,10,0,0">
                <VerticalStackLayout Spacing="25">

                    <!-- Username -->
                    <StackLayout Spacing="8">
                        <Label Text="Tên đăng nhập" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#333"/>
                        <Frame BackgroundColor="#F8F9FA" 
                               BorderColor="#E1E5E9" 
                               CornerRadius="10" 
                               Padding="0" 
                               HasShadow="False">
                            <Entry Text="{Binding Username}" 
                                   Placeholder="Tên đăng nhập" 
                                   BackgroundColor="Transparent"
                                   FontSize="16"/>
                        </Frame>
                    </StackLayout>

                    <!-- Password -->
                    <StackLayout Spacing="8">
                        <Label Text="Mật khẩu" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#333"/>
                        <Frame BackgroundColor="#F8F9FA" 
                               BorderColor="#E1E5E9" 
                               CornerRadius="10" 
                               Padding="0" 
                               HasShadow="False">
                            <Entry Text="{Binding Password}" 
                                   Placeholder="Mật khẩu" 
                                   IsPassword="True" 
                                   BackgroundColor="Transparent"
                                   FontSize="16"/>
                        </Frame>
                    </StackLayout>

                    <!-- Phone Number -->
                    <StackLayout Spacing="8">
                        <Label Text="Số điện thoại" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="#333"/>
                        <Frame BackgroundColor="#F8F9FA" 
                               BorderColor="#E1E5E9" 
                               CornerRadius="10" 
                               Padding="0" 
                               HasShadow="False">
                            <Entry Text="{Binding PhoneNumber}" 
                                   Placeholder="Số điện thoại" 
                                   Keyboard="Telephone" 
                                   BackgroundColor="Transparent"
                                   FontSize="16"/>
                        </Frame>
                    </StackLayout>

                    <!-- Message -->
                    <Frame BackgroundColor="#F0F8FF" 
                           BorderColor="#B3D9FF" 
                           CornerRadius="8" 
                           Padding="15"
                           IsVisible="{Binding IsMessageVisible}"
                           HasShadow="False">
                        <Label Text="{Binding Message}" 
                               TextColor="{Binding MessageColor}" 
                               FontSize="14"
                               HorizontalOptions="Center"/>
                    </Frame>

                    <!-- Register Button -->
                    <Button Text="Đăng ký" 
                            Command="{Binding RegisterCommand}" 
                            CommandParameter="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                            BackgroundColor="#27AE60"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            CornerRadius="12"
                            HeightRequest="55"
                            Margin="0,15,0,0"/>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>

</ContentPage>